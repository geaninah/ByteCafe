<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">

  <script scr="/js/dropdown.js"></script>

  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>


  <link rel="stylesheet" href="/css/style.css">

  <title>Byte Café</title>

</head>
<body>

  <!-- NAVIGATION BAR -->

  <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid navbar-header" id="header">
          <img src="/images/logo.png">
      </div>
      <div class="container-fluid navbar-header test-center h1">
          <%= cafe.name %> 
      </div>
      <div class="collapse navbar-collapse " id="">

      <!-- CONTENT ON THE RIGHT (FROM LEFT TO RIGHT) -->

        <ul class="nav navbar-nav navbar-right">

          <!-- LIST ITEM --> 
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-cutlery glyphicon-larges" aria-hidden="true" style="color:#aa764e"><span class="caret"></span></span></a>
            <ul class="dropdown-menu" id="cafe-dropdown">
              <li class="disabled" style="text-align:center"> <a><span class="fa fa-lg fa-circle-o-notch fa-spin"></span></a></li>
            </ul>
          </li>

          <!-- LIST ITEM -->
          <li>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-shopping-cart glyphicon-larges" aria-hidden="true" style="color:#aa764e"></span></a>
          </li>

          <!-- LIST ITEM -->

          <li class="dropdown" id="settings">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" ><span class="glyphicon glyphicon-cog glyphicon-large" aria-hidden="true" style="color:#aa764e"><span class="caret"></span></span></a>
            <ul class="dropdown-menu">
              <li><a href="account-details.html">Account Detail</a></li>
              <li><a href="#">Order History</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">Help</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="/auth/logout">Log out</a></li>
            </ul>
          </li>
            
        </ul>
      </div>
  </nav>
  <!-- END OF NAVIGATION BAR -->

  <!-- MAIN CONTENT OF THE PAGE -->

  <div class="container">
    <div class="row">

      <!-- STATIC SIDEBAR WITH DIFFERENT CATEGORIES -->
      <div class="col-sm-3">
        <nav class="bs-docs-sidebar affix" id="sideNavMenu"> 
        <img src="<%= cafe.image_url %>" class="img-responsive img-rounded" alt="<%= cafe.name %>">
        <br>
          <div class="list-group">
            <a href="#" class="list-group-item">Sandwiches</a>
            <a href="#" class="list-group-item active">Hot Drinks</a>
            <a href="#" class="list-group-item">Sweets</a>
            <a href="#" class="list-group-item">Cold Drinks</a>
            <a href="#" class="list-group-item">Soups</a>
          </div>
        </nav>
      </div>

      <!-- DYNAMIC CONTENT OF THE PAGE - STOCK ITEMS-->
      <div class="col-sm-9">
        <!-- CONTENT OF EACH ROW OF THE CONTENT -->
        <div class="row">

        <% products.forEach(function (product) { %>
        <!-- BOX REFERRING TO A PRODUCT -->
        <a href="#">
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
              <div class="caption" id="lessSpace">
              <h3 align="center"><%= product.name%></h3>
              </div>
              <img class="img-rounded" src="<%= product.image_url %>" alt="<%= product.name%>">
              <div class="caption">
                <a href="#" class="btn btn-default btn-add-cart" role="button">Add to Cart &nbsp;&nbsp;<span class="glyphicon glyphicon-shopping-cart" id="buttonIcon" aria-hidden="true"></span></a>
              </div>
            </div>
          </div>
        </a>
        <% }); %>
      </div>
    </div>
  </div>
</div>


  <!-- FOOTER OF PAGE -->

  <footer class="bs-docs-footer" role="contentInfo">
    <div class="container"></div>
    <div class="row">
      <div class="col-sm-12"><hr></div>
      <div class="col-sm-12">
        <div class="col-sm-7">
          <a href="#">Terms of Service</a>    
          <a href="#">Privacy</a>    
          <a href="#">Contacts</a>
        </div>
        <div class="col-sm-5">
          <p class="muted pull-right">© 2016 W3 Group @ School of Computer Science @ UoM. All rights reserved</p>
        </div>
      </div>
    </div>
  </footer>

  <!-- END OF FOOTER OF PAGE -->


</body>
</html>
